<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".activities.NewCarActivity">


    <TextView
        android:id="@+id/DEInspection2"
        android:layout_width="339dp"
        android:layout_height="83dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="Insira as informações sobre o seu carro"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DEInspection" />

    <TextView
        android:id="@+id/DEInspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/deinspection"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="323dp"
        android:layout_height="369dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnNextNC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DEInspection2"
        app:layout_constraintVertical_bias="0.039">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/comfortaa"
                android:text="Marca:"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editCarBrand"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="44dp"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="marca do carro"
                android:inputType="textPersonName"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="Modelo:"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editCarModel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:fontFamily="@font/comfortaa"
                android:hint="modelo do carro"
                android:inputType="textPersonName"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/matricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="Matricula:"
                android:textColor="#000000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/editTextMatricula"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="9"
                android:fontFamily="@font/comfortaa"
                android:hint="matricula AA00AA"
                android:inputType="none"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center|left"
                android:text="Data:"
                android:textColor="#000000"
                android:textSize="24sp"
                tools:gravity="left" />

            <EditText
                android:id="@+id/editMonth"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="4"
                android:hint="mes"
                android:inputType="number" />

            <EditText
                android:id="@+id/editYear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="6"
                android:hint="ano"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/btnNextNC"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:fontFamily="@font/comfortaa"
            android:gravity="center"
            android:text="Próximo"
            android:textColor="#000000"
            android:textSize="24sp"
            app:backgroundTint="#F1E794" />

    </LinearLayout>

    <Button
        android:id="@+id/btnBackNC"
        android:layout_width="145dp"
        android:layout_height="67dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_arrowback"
        android:text="Back"
        android:textColor="#000000"
        app:backgroundTint="#00591010"
        app:layout_constraintBottom_toTopOf="@+id/DEInspection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" />

</androidx.constraintlayout.widget.ConstraintLayout>