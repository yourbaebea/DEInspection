<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:windowSoftInputMode="adjustNothing"
    tools:context=".activities.NewCarActivity">


    <TextView
        android:id="@+id/DEInspection2"
        android:layout_width="339dp"
        android:layout_height="83dp"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/insira_as_informa_es_sobre_o_seu_carro"
        android:textColor="#000000"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DEInspection"
        tools:layout_marginTop="230dp" />

    <TextView
        android:id="@+id/DEInspection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/comfortaa_bold"
        android:text="@string/deinspection"
        android:textColor="#000000"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="450dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/marca"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editCarBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="295dp"
        android:layout_marginEnd="44dp"
        android:layout_marginRight="44dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="@string/marca_do_carro"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:autofillHints="" />

    <TextView
        android:id="@+id/model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="@string/modelo"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editCarModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="450dp"
        android:ems="10"
        android:fontFamily="@font/comfortaa"
        android:hint="@string/modelo_do_carro"
        android:inputType="textPersonName"
        android:textSize="18sp"
        android:autofillHints="" />


    <TextView
        android:id="@+id/matricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/comfortaa"
        android:gravity="center"
        android:text="@string/matricula"
        android:textColor="#000000"
        android:textSize="24sp"
        tools:layout_marginTop="350dp" />

    <EditText
        android:id="@+id/editTextMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="170dp"
        android:layout_marginLeft="170dp"
        android:layout_marginTop="350dp"
        android:ems="9"
        android:fontFamily="@font/comfortaa"
        android:hint="@string/matricula_aa00aa"
        android:inputType="none"
        android:textSize="18sp"
        android:autofillHints="" />


    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/data"
        android:textColor="#000000"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="110dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="400dp"
        android:ems="4"
        android:hint="@string/mes"
        android:inputType="number"
        android:importantForAutofill="no" />

    <EditText
        android:id="@+id/editYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="190dp"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="400dp"
        android:ems="6"
        android:hint="@string/ano"
        android:inputType="number"
        android:importantForAutofill="no" />




    <Button
        android:id="@+id/btnBackNC"
        android:layout_width="145dp"
        android:layout_height="67dp"
        android:background="@color/black"
        android:drawableLeft="@drawable/ic_arrowback"
        android:text="Back"
        android:textColor="#000000"
        app:backgroundTint="#00591010"
        app:layout_constraintBottom_toTopOf="@+id/DEInspection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.805" />

    <Button
        android:id="@+id/btnNextNC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="560dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/comfortaa"
        android:text="@string/pr_ximo"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#F1E794" />


</RelativeLayout>